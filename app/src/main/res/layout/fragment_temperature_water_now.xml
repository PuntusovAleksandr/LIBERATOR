<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">
    <!--tools:context=".fragments.TemperatureWaterNowFragment">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_title_param"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view_iid"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:maxLines="2"
            android:text="water now"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_title_fragment" />


        <View
            android:id="@+id/view_iid"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:layout_below="@+id/view_iid"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_toLeftOf="@+id/tv_temperature"
            android:layout_toStartOf="@+id/tv_temperature"
            android:src="@drawable/termometr" />

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_iid"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:text="TEST"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_iid"
            android:layout_toEndOf="@+id/tv_temperature"
            android:layout_toRightOf="@+id/tv_temperature"
            android:text="water now"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>
